#:kivy 1.0

<Home>: 
    BoxLayout:
        orientation:"vertical"
        size:root.width, root.height
        padding:10,10,10,0
        
        GridLayout:
            padding:20,20,0,0
            cols:2 
            size:root.width, root.height

            GridLayout:
                padding:40,10,10,10
                rows:2                
                canvas.before:
                    Color:
                        rgba: 0.3, 0.5, 0.7, 1
                Button:
                    id:tweet_label
                    text:"Tweet"
                    # size_hint: None, None
                    on_press:root.tweet()
                Button:
                    id:buttonlike
                    text:"Like"
                    # size_hint: None, None
                    on_press: root.likeclick()

                
            TextInput:
                hint_text:"Type tweet here"
                id:tweet_input
                multiline:True
                padding: 20,0,20,20
                halign: 'left'
                valign: 'middle'

        ProgressBar:
            id:progress_bar
            value: 0
            min: 0
            max: 1
            padding:0,0,0,0

        ScrollView:
            do_scroll_x: False
            do_scroll_y: True
            padding:20,20,20,20
            canvas.before:
                Color: 
                    rgba: 0.3,0.3,0.3,1 
            Label:
                size_hint_y: None
                height: self.texture_size[1]
                text_size: self.width, None
                padding: 30, 30
                id:displayid
                text:root.display
