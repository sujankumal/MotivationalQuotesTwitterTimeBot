#:kivy 1.0

<Home>: 
    BoxLayout:
        orientation:"vertical"
        size:root.width, root.height
        padding:30,30,30,0
        
        GridLayout:
            padding:20,20,0,20
            cols:2 
            size:root.width, root.height
            canvas.before:
                Color:
                    rgba: 0.3, 0.5, 0.7, 1
                Line:
                    width: 20
                    rectangle: self.x, self.y, self.width, self.height
            GridLayout:
                padding:40,20,20,20
                rows:2                
                canvas.before:
                    Color:
                        rgba: 0.3, 0.5, 0.7, 1
                Button:
                    id:tweet_label
                    text:"Tweet"
                    size_hint: None, None
                    on_press:root.tweet()
                Button:
                    id:buttonlike
                    text:"Like"
                    size_hint: None, None
                    on_press: root.likeclick()

                
            TextInput:
                hint_text:"Type tweet here"
                id:tweet_input
                multiline:True
                padding: 20,0,20,20
                halign: 'left'
                valign: 'middle'
            
        ScrollView:
            do_scroll_x: False
            do_scroll_y: True
            padding:20,20,20,20
            canvas.before:
                Color: 
                    rgba: 0.3,0.3,0.3,1 
            Label:
                size_hint_y: None
                height: self.texture_size[1]
                text_size: self.width, None
                padding: 30, 30
                id:displayid
                text:root.display
                