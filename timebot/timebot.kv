#:kivy 1.0

<Home>: 
    BoxLayout:
        orientation:"vertical"
        size:root.width, root.height
        
        GridLayout:
            cols:2 
            size:root.width, root.height
            canvas.before:
                Color:
                    rgba: 1, 0.5, 0.3, 1
                Line:
                    width: 20
                    rectangle: self.x, self.y, self.width, self.height
            GridLayout:
                rows:2                
                Button:
                    id:tweet_label
                    text:"Tweet"
                    size_hint: None, None
                    on_press:root.tweet()
                Button:
                    id:buttonlike
                    text:"Like"
                    size_hint: None, None
                    on_press: root.likeclick()

                
            TextInput:
                hint_text:"Type tweet here"
                id:tweet_input
                multiline:True
                padding_x:20
                halign: 'left'
                valign: 'middle'
            
        ScrollView:
            do_scroll_x: False
            do_scroll_y: True

            Label:
                size_hint_y: None
                height: self.texture_size[1]
                text_size: self.width, None
                padding: 30, 30
                id:displayid
                text:root.display
                